{
	"compilerOptions": {
		"jsx": "react",
		"noImplicitAny": false,
		"noEmitOnError": true,
		"removeComments": false,
		"sourceMap": true,
		"target": "ES2016",
		"outDir": "ClientApp/src",
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"exclude": [
		"ClientApp/node_modules",
		"node_modules",
		"wwwroot"
	],
	"include": [
		"scripts/**/*",
		"ClientApp/**/*",
		"ClientApp/TypeScript/**/*"
	],
	"compileOnSave": true
}
